---
import { siteConfig } from "../config";
const hasCertifications = siteConfig.certifications && siteConfig.certifications.length > 0;
---

{
  hasCertifications && (
    <section id="certifications" class="p-8 sm:p-12 md:p-16 lg:p-24">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
              Certifications
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            ></div>
            <p class="text-base sm:text-lg text-gray-600 mt-5">
              Selected professional certificates that reinforce cloud architecture, Kubernetes, and automation expertise.
            </p>
          </div>

          <div class="lg:col-span-8 space-y-4">
            {siteConfig.certifications.map((cert, index) => (
              <div
                class="rounded-2xl border border-gray-200 bg-white p-5 md:p-6 shadow-sm transition-shadow duration-200 hover:shadow-lg"
              >
                <div class="flex items-center justify-between gap-4">
                  <span
                    class="text-sm font-mono"
                    style={`color: ${siteConfig.accentColor}`}
                  >
                    0{index + 1}
                  </span>
                  <div class="text-right text-sm sm:text-base text-gray-500">
                    {cert.issuer}
                    {cert.date && <span class="block text-gray-400">{cert.date}</span>}
                  </div>
                </div>

                <h3 class="mt-3 text-lg sm:text-xl font-semibold text-gray-900">
                  {cert.name}
                </h3>

                {cert.notes && (
                  <p class="mt-2 text-sm sm:text-base text-gray-600">
                    {cert.notes}
                  </p>
                )}
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>
  )
}
